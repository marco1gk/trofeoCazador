<Window x:Class="trofeoCazador.VentanasReutilizables.VentanaCorreoJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:trofeoCazador.Properties"
        xmlns:local="clr-namespace:trofeoCazador.VentanasReutilizables"
        Title="{x:Static p:Resources.tituloRecuperarContraseña}" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="337*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{x:Static p:Resources.tbDescripcionRecuperarContraseña}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,20,0,0" Grid.Column="3" />
        <TextBox x:Name="tbCorreo" Width="250" Height="30" Margin="12,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="3" />
        <Button Content="{x:Static p:Resources.btnAceptar}" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="BtnClicIngresarCorreo_Click" Margin="87,122,0,0" Grid.Column="3"/>
    </Grid>
</Window>
