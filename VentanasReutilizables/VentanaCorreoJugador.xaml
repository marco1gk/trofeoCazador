<Window x:Class="trofeoCazador.VentanasReutilizables.VentanaCorreoJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recuperar Contraseña" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Ingrese su correo para recuperar su contraseña" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />
        <TextBox x:Name="CorreoTextBox" Width="250" Height="30" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <Button Content="Ingresar" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnClicIngresarCorreo" Margin="0,122,0,0"/>
    </Grid>
</Window>
