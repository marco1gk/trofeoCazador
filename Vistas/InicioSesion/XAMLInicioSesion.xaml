<Page x:Class="trofeoCazador.Vistas.InicioSesion.XAMLInicioSesion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:trofeoCazador.Properties"
      xmlns:local="clr-namespace:trofeoCazador.Vistas.InicioSesion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="XAMLInicioSesion">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Margin="0,30,0,0"
                   Foreground="Black"><Run Language="es-mx" Text="Hunter´s Trophy"/></TextBlock>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBox x:Name="UsuarioTextBox"
                     Margin="0,10"
                     Padding="10"
                     Height="40"
                     FontSize="16"
                     Background="White"
                     Foreground="Black"/>

            <PasswordBox x:Name="ContrasenaPasswordBox"
                         Margin="0,10"
                         Padding="10"
                         Password="************"
                         Tag="************"
                         Height="40"
                         FontSize="16"
                         
                          Background="Transparent"
                         Foreground="#CDCDCD" />

            <Button Content="Iniciar Sesión"
                    Background="#007ACC"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,20,0,0"
                    Padding="10"
                    Height="40"/>
        </StackPanel>
        <Label  Content="{x:Static p:Resources.lbLogin_}"  HorizontalAlignment="Center" Margin="0,90,0,0" Height="23" VerticalAlignment="Top" Width="136" Grid.RowSpan="2"/>
        <Label Content="{x:Static p:Resources.lbUserName_}" HorizontalAlignment="Left" Margin="264,112,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="{x:Static p:Resources.lbPassword_}" HorizontalAlignment="Left" Margin="254,72,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="{x:Static p:Resources.NewInGame_}" HorizontalAlignment="Center" Margin="0,218,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Button Content="{x:Static p:Resources.btnRegister_}" HorizontalAlignment="Left" Margin="364,18,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Content="{x:Static p:Resources.Guest_}" HorizontalAlignment="Left" Margin="676,70,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Content="{x:Static p:Resources.btnForgotPassword_}" HorizontalAlignment="Left" Margin="250,138,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>
