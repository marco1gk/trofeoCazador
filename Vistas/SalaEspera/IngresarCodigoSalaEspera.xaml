
<Page x:Class="trofeoCazador.Vistas.IngresarCodigoSalaEspera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="clr-namespace:trofeoCazador.Vistas.SalaEspera"
      Title="Ingresar Código Lobby">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Ingresa el código del lobby:" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="txtCodigoLobby" Width="200" Height="30"/>
        <Button Content="Unirse" Width="100" Margin="10" Click="BtnIngresar_Click"/>
    </StackPanel>
</Page>

