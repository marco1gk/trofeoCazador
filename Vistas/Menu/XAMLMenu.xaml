<Page x:Class="trofeoCazador.Vistas.Menu.XAMLMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:trofeoCazador.Properties"
      xmlns:local="clr-namespace:trofeoCazador.Vistas.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="XAMLVestibulo">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/verde.png" 
                        Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Fila para encabezado -->
            <RowDefinition Height="*" />
            <!-- Fila principal -->
            <RowDefinition Height="Auto" />
            <!-- Fila para pie de página -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Columna principal -->
            <ColumnDefinition Width="200" />
            <!-- Columna lateral -->
        </Grid.ColumnDefinitions>

        <!-- Encabezado -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bienvenido al Vestíbulo" 
                   FontSize="24" HorizontalAlignment="Center" Margin="10" />

        <!-- Contenido principal -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Contenido Principal Aquí" 
                   FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <!-- Columna lateral -->
        <StackPanel Grid.Row="1" Grid.Column="1" Background="#F0F0F0" Margin="5">
            <Button Content="Opción 1" Margin="5" />
            <Button Content="Opción 2" Margin="5" />
            <Button Content="Opción 3" Margin="5" />
        </StackPanel>

        <!-- Pie de página -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
                   FontSize="14" HorizontalAlignment="Center" Margin="10" />
    </Grid>
</Page>
